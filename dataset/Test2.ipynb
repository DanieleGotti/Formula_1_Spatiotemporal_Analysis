import fastf1
import pandas as pd
import numpy as np
from scipy.interpolate import interp1d

# ==============================================================================
# PROGETTO: F1 Functional Data Analysis & D-STEM
# DESCRIZIONE: 
# Questo script esegue il Data Engineering per trasformare le serie temporali
# di telemetria (Time-Domain) in Dati Funzionali (Space-Domain).
#
# OBIETTIVO TECNICO:
# Generare una matrice allineata dove ogni osservazione è una funzione v_tk(s)
# definita su un dominio spaziale s comune, pronta per:
# 1. Regressione Funzionale (FDA)
# 2. Modellistica Spazio-Temporale (D-STEM)
# ==============================================================================

# --- 0. CONFIGURAZIONE PARAMETRI ---
YEAR = 2024      # Anno consolidato per avere dati completi
RACE = 'Bahrain' # Circuito "High Degradation" ideale per studiare l'usura
SESSION = 'R'    # Gara
SPATIAL_RESOLUTION = 10 # [Metri] Discretizzazione del dominio continuo 's'
SELECTED_DRIVERS = ['VER', 'PER', 'SAI', 'LEC', 'RUS', 'NOR', 'HAM', 'PIA', 'ALO', 'STR']

# Abilita cache per evitare di riscaricare i dati ogni volta
fastf1.Cache.enable_cache('f1_cache')

print(f"--- FASE 1: ESTARZIONE DATI ({RACE} {YEAR}) ---")
session = fastf1.get_session(YEAR, RACE, SESSION)
session.load()

# --- 1. FILTRAGGIO E PULIZIA (DATA CLEANING) ---
# Selezioniamo solo i piloti di interesse e i giri lanciati.
laps = session.laps.pick_drivers(SELECTED_DRIVERS).pick_quicklaps()

# CRITICO PER MODELLI I.I.D. / MARKOVIANI:
# Rimuoviamo i giri sotto Safety Car (TrackStatus != 1).
# Se includessimo giri lenti da SC, introdurremmo outlier strutturali che
# violano l'ipotesi di stazionarietà o trend lineare del degrado.
laps = laps[laps['TrackStatus'] == '1']

# Rimuoviamo giri in/out dai box (non sono giri completi)
laps = laps[laps['PitInTime'].isnull() & laps['PitOutTime'].isnull()]

print(f"Giri validi selezionati per l'analisi: {len(laps)}")

# --- 2. DEFINIZIONE DEL DOMINIO SPAZIALE (SPATIAL REGISTRATION) ---
# FDA richiede che tutte le funzioni siano definite sullo stesso dominio.
# La telemetria grezza è nel tempo (sampionata a Hz), quindi i punti non coincidono.
# Creiamo un vettore s fisso da 0 a Lunghezza_Pista.
circuit_length = laps['LapDistance'].median()
if pd.isna(circuit_length): circuit_length = 5412.0 # Fallback Bahrain

# Griglia spaziale s: [0, 10, 20, ..., L]
spatial_grid = np.arange(0, int(circuit_length), SPATIAL_RESOLUTION)
print(f"Griglia Spaziale creata: {len(spatial_grid)} punti (risoluzione: {SPATIAL_RESOLUTION}m)")


# --- 3. DEFINIZIONE FUNZIONI FISICHE (FEATURE ENGINEERING) ---

def calculate_curvature(x, y):
    """
    Calcola la Curvatura Geometrica (Kappa) della pista.
    TEORIA:
    La curvatura è il regressore spaziale più forte per la velocità.
    Formula: k(s) = |x'y'' - y'x''| / (x'^2 + y'^2)^(3/2)
    
    NOTE TECNICHE:
    Usiamo gradienti numerici (differenze finite) sulle coordinate interpolate.
    Questo crea una Covariata Spaziale Invariante nel tempo (la pista non cambia).
    """
    # Derivate prime rispetto allo spazio
    dx = np.gradient(x)
    dy = np.gradient(y)
    
    # Derivate seconde
    ddx = np.gradient(dx)
    ddy = np.gradient(dy)
    
    # Calcolo numeratore e denominatore
    numerator = dx * ddy - dy * ddx
    denominator = (dx**2 + dy**2)**1.5
    
    # Gestione divisione per zero (rettilinei) e valori NaN
    with np.errstate(divide='ignore', invalid='ignore'):
        k = numerator / denominator
        k[np.isnan(k)] = 0
        
    return np.abs(k) # Restituiamo il valore assoluto (intensità curva)

def estimate_fuel_load(total_laps, current_lap):
    """
    Stima il carico di carburante (Fuel Load).
    TEORIA:
    La massa dell'auto decresce linearmente con i giri.
    Effetto stimato: ~0.03s guadagnati per giro grazie al minor peso.
    
    Questa è una Covariata Temporale che 'confonde' l'effetto degrado gomme.
    Va inserita nel modello per isolare il vero degrado (Tyre Wear).
    Assume: 110kg partenza, 0kg arrivo.
    """
    fuel_per_lap = 110.0 / total_laps
    return 110.0 - (fuel_per_lap * current_lap)

# Totale giri previsto (necessario per il modello di consumo)
total_race_laps = session.total_laps
if pd.isna(total_race_laps): total_race_laps = 57 

# --- 4. CORE LOOP: INTERPOLAZIONE E CREAZIONE DATASET ---
data_list = []
print("--- FASE 2: INTERPOLAZIONE FUNZIONALE (Attendere...) ---")

for i, lap in laps.iterrows():
    try:
        # Otteniamo la telemetria grezza (Time Domain)
        tel = lap.get_telemetry()
        if len(tel) < 50: continue # Skip giri corrotti
        
        # --- A. REGISTRAZIONE FUNZIONALE (INTERPOLAZIONE) ---
        # Trasformiamo i dati da (Tempo -> Valore) a (Spazio -> Valore).
        # Usiamo 'interp1d' lineare. 'fill_value="extrapolate"' gestisce 
        # i piccoli disallineamenti GPS all'inizio/fine del giro.
        
        # 1. Creiamo le funzioni interpolanti basate sulla distanza grezza misurata
        f_speed = interp1d(tel['Distance'], tel['Speed'], kind='linear', fill_value="extrapolate")
        f_x = interp1d(tel['Distance'], tel['X'], kind='linear', fill_value="extrapolate")
        f_y = interp1d(tel['Distance'], tel['Y'], kind='linear', fill_value="extrapolate")
        
        # 2. Valutiamo le funzioni sulla NOSTRA griglia standard (spatial_grid)
        # Ora s_speed è un vettore di lunghezza fissa compatibile tra tutti i giri.
        s_speed = f_speed(spatial_grid)
        s_x = f_x(spatial_grid)
        s_y = f_y(spatial_grid)
        
        # --- B. CALCOLO REGRESSORI FISICI ---
        # Calcoliamo la curvatura sui dati GIA' spazializzati per stabilità numerica.
        s_curvature = calculate_curvature(s_x, s_y)
        
        # Calcoliamo il carburante per questo specifico giro
        fuel = estimate_fuel_load(total_race_laps, lap['LapNumber'])
        
        # --- C. VETTORIZZAZIONE DATI ---
        # Creiamo un DataFrame temporaneo per il giro corrente.
        # Struttura 'Long Format': Ogni riga è un punto nello spazio-tempo.
        # Questa struttura è ideale per R (nlme, fda, STEM) e Python (pandas).
        lap_df = pd.DataFrame({
            'Driver': lap['Driver'],       # Identificativo Pilota (Cluster k)
            'Team': lap['Team'],           # Utile per Clustering Spaziale D-STEM
            'LapNumber': lap['LapNumber'], # Indice Temporale (t)
            'Space_Distance': spatial_grid,# Indice Spaziale (s)
            
            # Variabile Risposta (Y)
            'Speed': s_speed,              # v_tk(s)
            
            # Regressori Spaziali (X_s)
            'Curvature': s_curvature,      # Feature della pista
            'X_Coord': s_x,                # Utile per plot mappa
            'Y_Coord': s_y,                # Utile per plot mappa
            
            # Regressori Temporali (X_t)
            'Fuel_Load': fuel,             # Massa variabile
            'TyreLife': lap['TyreLife'],   # Età gomma (proxy degrado)
            
            # Variabili Categoriche
            'Compound': lap['Compound']    # Tipo gomma
        })
        
        data_list.append(lap_df)
            
    except Exception as e:
        # Gestione errori robusta per non fermare il loop su un singolo giro fallato
        continue 

# Unione di tutti i giri in un unico DataFrame massivo
df_final = pd.concat(data_list, ignore_index=True)

# --- 5. POST-PROCESSING (DUMMY VARIABLES) ---
# I modelli di regressione non accettano stringhe ("SOFT", "MEDIUM").
# Usiamo One-Hot Encoding per creare variabili binarie matematiche.
# Risultato: Colonne Tyre_HARD, Tyre_MEDIUM, Tyre_SOFT (valori 0 o 1).
df_final = pd.get_dummies(df_final, columns=['Compound'], prefix='Tyre')

# --- 6. SALVATAGGIO ---
filename = f"f1_functional_data_{RACE}_{YEAR}.csv"
df_final.to_csv(filename, index=False)

print("\n" + "="*50)
print(f"COMPLETATO. Dataset salvato in: {filename}")
print(f"Dimensioni totali: {df_final.shape}")
print("Struttura Dati (Anteprima):")
print(df_final[['Driver', 'LapNumber', 'Space_Distance', 'Speed', 'Curvature', 'Fuel_Load']].head())
print("="*50)
print("NOTE PER D-STEM:")
print("1. 'Space_Distance' è la coordinata spaziale s.")
print("2. 'LapNumber' è la coordinata temporale t.")
print("3. Per la 'Matrice di Prossimità' dei piloti, eseguire PCA separata su dati statici.")
